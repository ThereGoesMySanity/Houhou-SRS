<UserControl x:Class="Kanji.Interface.Controls.SettingsActionsControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:business="clr-namespace:Kanji.Interface.Business"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="500">

    <UniformGrid Rows="1">
        <Button Classes="ActionButton" Content="Save settings"
            Command="{Binding SaveSettingsCommand}"
            ToolTip.Tip="Saves the current settings." />
    </UniformGrid>
</UserControl>
