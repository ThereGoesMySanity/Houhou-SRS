                  <TextBlock Text="In use" VerticalAlignment="Center" HorizontalAlignment="Center" IsVisible="{Binding Tag, RelativeSource={RelativeSource AncestorType=Border}}" />
                </UniformGrid>
              </Grid>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
